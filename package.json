{
  "name": "backend",
  "private": true,
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./index.ts --outfile server",
    "dev": "bun run --hot index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "packageManager": "bun@1.2.15",
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@better-auth/cli": "^1.2.9",
    "@openrouter/ai-sdk-provider": "^0.7.2",
    "@upstash/redis": "^1.35.0",
    "ai": "^4.3.16",
    "better-auth": "^1.2.9",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.7.6",
    "pg": "^8.14.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.16"
  },
  "devDependencies": {
    "@types/bun": "^1.2.16",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.5",
    "tsc-alias": "^1.8.11",
    "typescript": "^5.8.2"
  },
  "files": [
    "backend.index.ts"
  ]
}
