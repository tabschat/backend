{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "src",
		"paths": {
			"db": ["db/index.ts"],
			"db/*": ["db/*"],
			"db/schema/message": ["db/schema/message.ts"],
			"@/*": ["*"]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"tsc-alias": {
		"resolveFullPaths": true
	}
} 

