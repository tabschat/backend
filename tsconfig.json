{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./backend",
		"paths": {
		"@/*": ["./*"],
		"db": ["db/index.ts"],
		"db/*": ["db/*"],
		"db/schema/message": ["db/schema/message.ts"]
		},
		"outDir": "./dist",
		"types": [
        "bun"
    ],
	  "composite": true,
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx"
	},
	"tsc-alias": {
		"resolveFullPaths": true
	}
} 